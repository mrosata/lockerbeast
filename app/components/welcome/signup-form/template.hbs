<!-- HEADLINE -->
<div class="headline-row">
    <h1 class="section-title caticon sbx"><i>C</i><span class="sport"></span>Sign-up</h1>
</div>


<div class="row">
    <div class="col-md-8">
        <form class="signup-form form-horizontal" {{action "signUpUser" on="submit"}}>
            <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  {{input type="text" id="email" placeholder="Email" class="form-control" value=email}}
                </div>
            </div>
            <div class="form-group">

                <label for="firstName" class="col-sm-2 control-label">First name</label>
                <div class="col-sm-10">
                  {{input type="text" id="firstName" placeholder="First Name" class="form-control" value=firstName}}
                </div>

                <label for="lastName" class="col-sm-2 control-label">Last name</label>
                <div class="col-sm-10">
                  {{input type="text" id="lastName" placeholder="Last Name" class="form-control" value=lastName}}
                </div>
            </div>


            <div class="form-group">
                <label for="birthday" class="col-sm-2 control-label">Birthday</label>
                <div class="ui-input-text ui-body-inherit ui-corner-all ui-shadow-inset">
                  {{jquery-ui.datepicker buttonText="Birthday" placeholder="Birthday" changeYear=true defaultDate="01/01/2000" value=birthday}}
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                  {{input type="text" placeholder="Username" class="form-control" value=username}}
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                  {{input type="password" placeholder="Password" class="form-control" value=password}}
                </div>
            </div>


            <div class="form-group">
                <label for="confirmpass" class="col-sm-2 control-label">Repeat Password</label>
                <div class="col-sm-10">
                  {{input type="password" placeholder="Confirm Password" class="form-control" value=confirmPassword}}
                </div>
            </div>

            <div class="form-group">
                <label for="gender">Gender</label>
                <div class="row">

                    <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
                      {{#radio-button
                      radioId="gender-male"
                      radioClass="form-control"
                      value="male"
                      groupValue=gender}}
                          Male
                      {{/radio-button}}
                    </div>

                    <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
                      {{#radio-button
                      radioId="gender-female"
                      radioClass="form-control"
                      value="female"
                      groupValue=gender}}
                          Female
                      {{/radio-button}}
                    </div>
                    <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1">
                      {{#radio-button
                      radioId="gender-unspecified"
                      radioClass="form-control"
                      value="unspecified"
                      groupValue=gender}}
                          Unspecified
                      {{/radio-button}}
                    </div>

                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{#if formIsReady}}
                        <button type="submit" class="btn btn-primary">Submit</button>
                    {{else}}
                        <button type="submit" disabled="disabled" class="btn btn-primary btn-disabled">Submit</button>
                    {{/if}}

                </div>
            </div>

        </form>
    </div>

    <div class="col-md-4"></div>
</div>
